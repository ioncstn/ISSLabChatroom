<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.domain.Chatter"
           table="Chatters">
        <id name="ID" column="id" type="int">
            <generator class="increment"/>
        </id>
        <property
                name="username"
                column="username"
                type="string"
        />
        <property
                name="password"
                column="password"
                type="string"
        />
        <property
                name="muted"
                column="muted"
                type="yes_no"
        />
    </class>
</hibernate-mapping>